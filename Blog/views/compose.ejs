<%- include('partials/header') -%>

<form action="/compose" method="post">
  <div class="form-group">
    <h2><b>Compose</b></h2>
    <label>Title</label>
    <input
      name="postTitle"
      class="form-control"
      type="text"
      autocomplete="off"
    />
    <label>Post</label>
    <textarea
      class="form-control"
      name="postBody"
      cols="30"
      rows="5"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include('partials/footer') -%>
